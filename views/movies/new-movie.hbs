<h2>Add a movie</h2>

<form action="/movies/create" method="POST">
  <label> Title:
    <input type="text" name="title"/>
  </label>

  <label> Cast:
    

    <select name="celebrity"  multiple>
      {{#each celebrityArr}}
    <option value={{this._id}}>{{this.name}}</option>
  {{/each}}
   </select>
  </label>

  <label> Plot:
    <textarea name="plot" cols="20" rows="6"> </textarea>
  </label>

  <label> Genre:
    <input type="text" name="genre"/>
  </label>

  <button type="submit"> Create </button>
</form>

<a href="/">Home</a>